<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <com.my.customview.view.CustomTitleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:titleContent="1234"
        custom:titleTextColor="#ff000088"
        custom:titleTextSize="40sp"
        android:padding="10dp"
        android:layout_centerInParent="true"/>

    <com.my.customview.view.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        custom:imageSource="@mipmap/ic_launcher"
        custom:imageScaleType="center"
        custom:titleContent="hello andorid ! "
        custom:titleTextColor="#ff0000"
        custom:titleTextSize="30sp" />

    <com.my.customview.view.CustomImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        custom:imageSource="@mipmap/ic_launcher"
        custom:imageScaleType="center"
        custom:titleContent="helloworldwelcome"
        custom:titleTextColor="#00ff00"
        custom:titleTextSize="20sp" />

</RelativeLayout>
